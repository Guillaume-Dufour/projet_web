<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/public/stylesheets/bootstrap.min.css">
    <title>Modification produit</title>
    <%- include('../general/navigation'); %>
</head>


<body>

<div class="container col-lg-4 col-md-4 col-sm-12 col-xs-12">
    <form action="/users/vendeur/produit_update/<%= produit.id_produit %>?_method=PUT" method="post" >

        <div class="form-group">
            <label for="libelle_produit">Nom</label> :
            <input type="text" class="form-control" name="libelle_produit" id="libelle_produit" value="<%= produit.libelle_produit %>" required />
        </div>

        <div class="form-group">
            <label for="id_type_produit">Type</label> :
            <select name="id_type_produit" id="id_type_produit">
                <% for (var i = 0; i < types.length; i++) { %>
                    <option value="<%= types[i].id_type_produit %>" <%= (produit.type === types[i].type ? "selected" : "") %>><%= types[i].type %></option>
                <% } %>
            </select>
        </div>

        <div class="form-group">
            <label for="poids_produit">Poids</label> (en kg) :
            <input type="number" step="0.001" min="0" class="form-control" name="poids_produit" id="poids_produit" value="<%= produit.poids_produit %>" required />
        </div>

        <div class="form-group">
            <label for="prix_produit">Prix</label> (en â‚¬) :
            <input type="number" step="0.01" min="0" class="form-control" name="prix_produit" id="prix_produit" value="<%= produit.prix_produit %>" required />
        </div>

        <div class="form-group">
            <label for="provenance_produit">Provenance</label> :
            <input type="text" class="form-control" name="provenance_produit" id="provenance_produit" value="<%= produit.provenance_produit %>" required />
        </div>

        <div class="form-group">
            <label for="est_bio"><input type="checkbox" name="est_bio" value="1" <%= (produit.est_bio === 1 ? "checked" : "") %>> Bio</label>
        </div>

        <div class="form-group">
            <label for="gencod_produit">Gencod</label> :
            <input type="text" class="form-control" name="gencod_produit" id="gencod_produit" value="<%= produit.gencod_produit %>" required/>
        </div>

        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary btn-dr" value="Modifier le produit">
        </div>

        <input type="hidden" name="id_produit" value="<%= produit.id_produit %>">
        <input type="hidden" name="_method" value="PUT">
    </form>
</div>
<br>

</body>

</html>