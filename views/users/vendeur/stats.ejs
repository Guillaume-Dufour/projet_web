<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/public/stylesheets/bootstrap.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <title>Statistiques</title>
    <%- include('../../general/navigation'); %>
</head>


<body>


<canvas id="myChart" width="30" ></canvas>

</body>

<script>
    var ctx = document.getElementById('myChart').getContext('2d');

    var lib_temp = "<%= libelles %>";
    var libelles = lib_temp.split(',');

    var donnees_temp = "<%= donnees %>";
    var donnees = donnees_temp.split(',');

    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: libelles,
            datasets: [{
                label: 'quantite',
                data: donnees ,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>
</html>